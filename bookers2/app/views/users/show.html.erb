<%# ユーザー情報更新時　サクセスメッセージ %>
<% if flash[:success] %>
  <%= flash[:success] %>
<% end %>
<%# login・signup時サクセスメッセージ %>
<% if notice %>
  <p><%= notice %></p>
<% end %>
<% if alert %>
  <p><%= alert %></p>
<% end %>
<%# プロフィール編集 %>
<h2>User info</h2>
<%= attachment_image_tag current_user, :profile_image, size: "60x60" , fallback: "no_image.jpg"%>
<p>name <%= current_user.name %></p>
<p>introduction <%= current_user.introduction %></p>
<p><button><%= link_to "EDIT",edit_user_path(current_user) %></button></p>
<%# 新規投稿 %>
<h2>New Book</h2>
<%= form_with model:@book,local:true do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Opinion</h3>
  <%= f.text_area :body %>
  <p><%= f.submit "Create Book" %></p>
<% end %>

<%# ユーザー別投稿一覧 %>
<h2>Books</h2>
<table>
  <tr>
    <td>image</td>
    <td>title</td>
    <td>opinion</td>
  </tr>
  <% @user_books.each do |book| %>
  <tr>
    <td><p><%= link_to attachment_image_tag(book.user, :profile_image, size: "60x60" , fallback: "no_image.jpg"),user_path(book.user) %></p>
      <%= link_to "#{book.user.name}",user_path(book.user) %>
    </td>
    <td><%= link_to "#{book.title}",book_path(book) %></td>
    <td><%= book.body %></td>
  <tr/>
  <% end %>
</table>
 <%= form_with url: search_path, method: :get, local: true do |f| %>
 　<div class="row">
    <div class="col-md-5">
      <%= f.text_field :search %>
    </div>
    <div class="col-md-2">
      <%= f.select :range,{'User':1,'Book':2},{include_blank: '検索'},{ class: 'form-control' , required: true } %>
    </div>
    <div class="col-md-2">
        <%= f.select :search_way,{'前方一致':1,"後方一致":2,"完全一致":3,"部分一致":4},
        {include_blank: '検索'},{ class: 'form-control' , required: true } %> 
    </div>
    <div class="col-md-2">
   　  <%= f.submit 'Search', name: nil %>
   　</div>
  <% end %>
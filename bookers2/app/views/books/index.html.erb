

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/message', book: @new_book %>
      <%= render 'users/profile_edit' %>
      <%= render 'books/new_book',book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <p><%= render 'searchs/form' %></p>
      <h2 class="mt-4">Books</h2>
      <table class="w-100">
        <tr class="w-100 border-top border-bottom">
          <td>　</td>
          <td class="pt-2 pb-2">Title</td>
          <td>Opinion</td>
        </tr>
        <% @books.each do |book| %>
          <tr class="border-top border-bottom">
            <td class="pt-2 pb-2"><%= link_to attachment_image_tag(book.user, :profile_image, size: "60x60" , fallback: "no_image.jpg"),user_path(book.user) %></td>
            <td><%= link_to "#{book.title}",book_path(book) %></td>
            <td><%= book.body %></td>
            <td id = "favorite-<%=book.id %>-btn-2">
              <%= render 'favorites/favorite-btn-2', book: book %>
            </td>
            <td><p><%= link_to "#{book.book_comments.count} コメント", book_path(book) %></p></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>